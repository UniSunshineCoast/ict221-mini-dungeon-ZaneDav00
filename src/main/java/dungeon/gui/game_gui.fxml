<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>



<BorderPane prefHeight="800.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dungeon.gui.Controller">

    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <top>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="15" alignment="CENTER">
                <Label fx:id="healthLabel" text="HP: 10"/>
                <Label fx:id="scoreLabel" text="Score: 0"/>
                <Label fx:id="stepsLabel" text="Steps: 0"/>
                <Label fx:id="levelLabel" text="Level: 1"/>       <Label fx:id="difficultyLabel" text="Diff: 3"/>  <Label fx:id="timerLabel" text="Time: 0s"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Initial Difficulty Setting:"/> <ComboBox fx:id="difficultyComboBox" onAction="#onDifficultyChanged"/>
            </HBox>

            <TextArea fx:id="statusTextArea" editable="false" wrapText="true" prefHeight="100.0" prefRowCount="5"/> </VBox>
    </top>

    <center>
        <GridPane fx:id="gridPane"
                  prefHeight="400.0" prefWidth="400.0"
                  BorderPane.alignment="CENTER" alignment="CENTER"> <BorderPane.margin>
            <Insets top="10.0" bottom="10.0"/>
        </BorderPane.margin>
        </GridPane>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Button text="↑ Up (W)" onAction="#moveUp" prefWidth="100.0"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="← Left (A)" onAction="#moveLeft" prefWidth="100.0"/>
                <Button text="→ Right (D)" onAction="#moveRight" prefWidth="100.0"/>
            </HBox>
            <Button text="↓ Down (S)" onAction="#moveDown" prefWidth="100.0"/>
        </VBox>
    </bottom>

</BorderPane>