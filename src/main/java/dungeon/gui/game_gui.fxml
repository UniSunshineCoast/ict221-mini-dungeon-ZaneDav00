<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label ?>

<BorderPane prefHeight="800.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dungeon.gui.Controller">

    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <!-- Player status at the top -->

    <top>
        <HBox spacing="20" alignment="CENTER">
            <Label fx:id="healthLabel" text="HP: 10"/>
            <Label fx:id="scoreLabel" text="Score: 0"/>
            <Label fx:id="stepsLabel" text="Steps: 0"/>
            <Label fx:id="timeLabel" text="Time: 0s"/>
        </HBox>
    </top>


    <!-- Game Grid in the center -->
    <center>
        <GridPane fx:id="gridPane"
                  prefHeight="400.0" prefWidth="400.0"
                  BorderPane.alignment="CENTER" />
    </center>

    <!-- Control Buttons at the bottom -->
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Button text="↑" onAction="#moveUp" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="←" onAction="#moveLeft" />
                <Button text="→" onAction="#moveRight" />
            </HBox>
            <Button text="↓" onAction="#moveDown" />
        </VBox>
    </bottom>

</BorderPane>

